@model Vidly.ViewModels.CustomerFormViewModel

@{
	ViewBag.Title = Model.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Customers"))
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		<hr />
		@*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
		@Html.ValidationSummary()
		<div class="form-group row">
			<div class="col-md-4">
				@Html.LabelFor(model => model.customerProp.Name, htmlAttributes: new { @class = "control-label" })
			</div>
			<div class="col-md-6">
				@Html.TextBoxFor(model => model.customerProp.Name, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.customerProp.IsSubscribedToNewsletter, htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-6">
				@Html.CheckBoxFor(model => model.customerProp.IsSubscribedToNewsletter)
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.customerProp.BirthDate, htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-6">
				@Html.TextBoxFor(model => model.customerProp.BirthDate, "{0:dd-MMM-yyyy}", new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-4">
				@Html.LabelFor(model => model.customerProp.MembershipTypeId, htmlAttributes: new { @class = "control-label" })
			</div>
			<div class="col-md-6">
				@Html.DropDownListFor(model => model.customerProp.MembershipTypeId, new SelectList(Model.membershipTypeProp, "Id", "Name"), "Select MemberShip Type", new { @class = "form-control" })
			</div>
		</div>
		@Html.HiddenFor(m=>m.customerProp.Id)
		<div class="form-group">
			<div class="col-md-offset-2 col-md-6">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}
