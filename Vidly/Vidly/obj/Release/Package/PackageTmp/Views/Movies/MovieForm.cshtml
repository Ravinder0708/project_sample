@model Vidly.ViewModels.MovieFormViewModel

@{
	ViewBag.Title = Model.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@*@if (Model.movieProp == null)
			{<h4>New Movie</h4> }
			else
			{ <h4>Edit Movie</h4>}*@
		<hr />
		@Html.ValidationSummary(false, "", new { @class = "text-danger" })
		<div class="form-group row">
			@Html.LabelFor(model => model.movieProp.Name, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.movieProp.Name, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.movieProp.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
			@*<div class="col-md-10 input-group date" data-provide="datepicker">
					@Html.TextBoxFor(model => model.movieProp.ReleaseDate, "{0:dd-MMM-yyyy}", new { @class = "form-control" })
					<div class="input-group-addon">
						<span class="glyphicon glyphicon-th"></span>
					</div>
				</div>
				<div class="input-append date" id="datetimepicker" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
					<input class="span2" size="16" type="text" value="12-02-2012">
					<span class="add-on"><i class="icon-th"></i></span>
				</div>
				<div class="input-append date">
					<input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
				</div>*@
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.movieProp.ReleaseDate, "{0:dd-MMM-yyyy}", new { @class = "form-control datepicker" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.movieProp.NumberInStock, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.movieProp.NumberInStock, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.movieProp.GenreId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.movieProp.GenreId, new SelectList(Model.genreProp, "Id", "Name"), "Select Genre List", new { @class = "form-control" })
			</div>
		</div>
		@Html.HiddenFor(model => model.movieProp.Id)
		<div class="form-group row">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}
